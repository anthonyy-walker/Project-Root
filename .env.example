# ============================================
# Epic Games API - Core Credentials
# ============================================
# NOTE: Discovery API requires USER token with discovery:surface:query READ permission
# Client credentials token does NOT have sufficient permissions
# Get your user token by logging in through the Epic Games website

EPIC_ACCESS_TOKEN=your_access_token_here
EPIC_ACCOUNT_ID=your_account_id_here
EPIC_X_ACCESS_TOKEN=your_x_access_token_here

# ============================================
# Epic Games OAuth Credentials
# ============================================
# These are for client credentials flow (limited permissions)
CLIENT_ID=your_client_id_here
CLIENT_SECRET=your_client_secret_here

# ============================================
# Fortnite Configuration
# ============================================
# Current Fortnite branch/version (update when new season releases)
FORTNITE_BRANCH=++Fortnite+Release-34.10

# ============================================
# Matchmaking Regions (8 total)
# ============================================
# All available Fortnite matchmaking regions for discovery data
MATCHMAKING_REGIONS=NAE,NAW,NAC,EU,ME,OCE,BR,ASIA

# ============================================
# Discovery Surfaces (16 total)
# ============================================
# All available discovery surfaces for parallel fetching
# Update if Epic adds new surfaces
ALL_SURFACES=CreativeDiscoverySurface_Browse,CreativeDiscoverySurface_Frontend,CreativeDiscoverySurface_Nested_Category_BR,CreativeDiscoverySurface_Nested_Category_Combat,CreativeDiscoverySurface_Nested_Category_Survival,CreativeDiscoverySurface_Nested_Category_Platformer,CreativeDiscoverySurface_Nested_Category_RhythmParty,CreativeDiscoverySurface_Nested_Collab_TWD,CreativeDiscoverySurface_Nested_Collab_TMNT,CreativeDiscoverySurface_Nested_Collab_LEGO,CreativeDiscoverySurface_Nested_Collab_FallGuys,CreativeDiscoverySurface_Nested_Collab_RocketRacing,CreativeDiscoverySurface_DelMar_TrackAndExperience,CreativeDiscoverySurface_EpicPage,CreativeDiscoverySurface_CreatorPage,CreativeDiscoverySurface_Library

# ============================================
# HTTP Client Configuration
# ============================================
# Timeout and socket pooling settings for HTTP requests
HTTP_TIMEOUT=60000
HTTP_MAX_SOCKETS=3000
HTTP_MAX_FREE_SOCKETS=1000

# ============================================
# Token Management
# ============================================
# Settings for automatic token refresh
TOKEN_REFRESH_BUFFER_SECONDS=300
TOKEN_FILE_PATH=./HowToAccessEpicGames/data/tokenData.json

# ============================================
# Database Configuration
# ============================================
# Elasticsearch - Primary data store
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_CA_CERT=

# Redis - Caching layer
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
