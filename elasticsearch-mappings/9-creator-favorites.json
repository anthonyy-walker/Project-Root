{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 1,
    "refresh_interval": "5s"
  },
  "mappings": {
    "properties": {
      "user_id": { "type": "keyword" },
      "creator_id": { "type": "keyword" },
      "creator_name": {
        "type": "text",
        "fields": { "keyword": { "type": "keyword" } }
      },
      "favorited_at": { "type": "date" },
      "unfavorited_at": { "type": "date" },
      "is_active": { "type": "boolean" },
      "notification_preferences": {
        "type": "object",
        "properties": {
          "new_map_published": { "type": "boolean" },
          "map_trending": { "type": "boolean" },
          "milestone_reached": { "type": "boolean" }
        }
      }
    }
  }
}
